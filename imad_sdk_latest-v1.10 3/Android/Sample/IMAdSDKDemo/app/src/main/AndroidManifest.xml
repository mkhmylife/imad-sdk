<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.appsploration.imadsdk.sample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.webkit.PermissionRequest" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".TestIMAdApplication"
        android:icon="@mipmap/ic_launcher"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".native_ad.NativeAdTest"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name=".native_video.NativeVideoAdTest"
                  android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".video.VideoAdTest"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".engage_ad.EngageAdTest"
                  android:screenOrientation="portrait">

        </activity>

        <activity android:name=".engage_ad.InlineEngageAdTest"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".engage_ad.InterstitialAdTest"
                  android:screenOrientation="portrait">

        </activity>

        <activity android:name=".engage_ad.EngageAdList"
                  android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>
